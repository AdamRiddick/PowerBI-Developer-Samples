    <link rel="shortcut icon" href="#" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/index.css">
    <link rel="stylesheet" href="css/dashboard/header.css">
    <link rel="stylesheet" href="css/dashboard/content.css">
    <link rel="stylesheet" href="css/dashboard/dropdown.css">
    <link rel="stylesheet" href="css/dashboard/report.css">

    <!-- TODO: Change font URL in the final environment -->
